{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "useDefineForClassFields": true,
    "outDir": "./dist",
    "declaration": true,
    "moduleResolution": "Node",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ],
}
