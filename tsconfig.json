{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "useDefineForClassFields": true,
    "outDir": "./dist",
    "declaration": true,
    "lib": ["ES2015", "DOM"],
    "moduleResolution": "Node",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true
  },
  "include": ["./src/*"]
}
